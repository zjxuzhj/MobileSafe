<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luncher_bg"
    tools:context="com.zhj.mobilesafe.SplashActivity" >

    <TextView
        android:id="@+id/tv_splash_versionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:shadowColor="#0000ff"
        android:shadowDx="2"
        android:shadowRadius="3"
        android:text="版本号：1.0"
        android:textColor="#00ff00" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_splash_versionname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_download_onloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp"
        android:layout_toLeftOf="@+id/progressBar1"
        android:text="nihaoanihaoa"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:visibility="invisible" />

</RelativeLayout>